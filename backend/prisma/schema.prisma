datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vote {
  id        Int      @id @default(autoincrement())
  token     String
  ballot    String   // JSON array of ranked candidate IDs
  createdAt DateTime @default(now())
}

model Token {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

